<div class="container">
  <div class="section">
<h2 style="text-align: center">Find the most suitable club!</h2>
</div>

<div class="section">
<%= simple_form_for clubs_path, method: :get do |f| %>
<div class="search-form-control form-group">
  <%= text_field_tag :query,
  params[:query],
  class: "form-control string required", id: "search_query",
    placeholder: "Find a Club"
    %>
    <button name="button" type="submit" class="btn-confirm" id="club-s-btn">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
  <% end %>
  </div>
<div class= "next">
<div class="section card-origin mb-3 p-3 ">
<%= form_tag clubs_path, method: :get do %>
<div class="row">
  <% Sport.all.each do |sport| %>
  <div class="col-sm-4 col-md-3 col-lg-2">
  <p><%= check_box_tag "sport[]", sport.name %>
  <%= sport.name %></p>
  </div>
  <% end %>
</div>
  <div class="p-0" style="text-align:center">
  <br><%= submit_tag "Filter", class: "btn btn-confirm" %>
  </div>
<% end %>
</div>
<div class="section">
<% if params[:sport].blank? %>
<% else %>
<h3 class= "mb-3">Clubs offering <i><%= params[:sport].join(" or ") %></i></h3>
<% end %>
</div>

  <div class="section">
  <div class="vertical-card-wrapper row">
    <% @clubs.each do |club| %>
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card-origin card-vertical my-2 text-center mx-auto">
        <%= link_to club_path(club), class: "card-link" do %>
        <div>
          <img src="https://pilgrimageyogaonline-yaronguez.netdna-ssl.com/wp-content/uploads/2018/11/Img1-1024x675.jpg" alt="yoga studio" class="card-vertical-cover">
        </div>
        <div class="avatar-new-position">
          <%= cl_image_tag club.photo, class: "avatar-bordered-card" %>
        </div>
        <div class="card-bottom">
          <div class="card-info">
            <h3 class="club-card-name"><%= club.name %></h3>
            <p>City: Amsterdam</p>
          </div>
          <div class="card-tags">
            <div class="row d-flex">
              <% club.offers.each do |offer| %>
              <div class="col-4">
                <div class="tag"><%= offer.sport.name %></div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>
  </div>
  </div>
</div>

</div>

