<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "cz-navbarlogo.svg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? && current_user.club == nil%>
        <li class="nav-item active">
          <%= link_to "Find Clubs", clubs_path , class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Find Sports", questionaire_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "#{current_user.photo}", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Dashboard", user_dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% elsif user_signed_in? && current_user.club != nil %>
        <li class="nav-item active">
          <%= link_to "Find Members", user_index_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Find Clubs", clubs_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Find Sports", questionaire_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "#{current_user.photo}", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Club Dashboard", user_clubdashboard_path, class: "dropdown-item" %>
            <%= link_to "My Dashboard", user_dashboard_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item active">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
